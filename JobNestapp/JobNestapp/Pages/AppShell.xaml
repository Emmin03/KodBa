<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="JobsNestApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:JobsNestApp.Pages"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <ShellContent
            Title="Početna"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Pretraga"
            ContentTemplate="{DataTemplate local:SearchPage}"
            Route="SearchPage" />
        <ShellContent
            Title="Prijave"
            ContentTemplate="{DataTemplate local:ApplicationsPage}"
            Route="ApplicationsPage" />
        <ShellContent
            Title="Poruke"
            ContentTemplate="{DataTemplate local:MessagesPage}"
            Route="MessagesPage" />
        <ShellContent
            Title="Profil"
            ContentTemplate="{DataTemplate local:ProfilePage}"
            Route="ProfilePage" />
    </TabBar>
</Shell>