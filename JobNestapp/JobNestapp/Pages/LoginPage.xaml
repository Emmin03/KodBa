<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobsNestApp.Pages.LoginPage"
             BackgroundColor="{StaticResource BackgroundColor}">
    <Grid RowDefinitions="Auto, *, Auto" Padding="20">
        <Label Grid.Row="0" Text="Prijava" FontSize="30" HorizontalOptions="Center" TextColor="{StaticResource PrimaryColor}" Margin="0,20,0,0" />
        <VerticalStackLayout Grid.Row="1" Spacing="15" VerticalOptions="Center">
            <Frame CornerRadius="10" Padding="10" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Entry x:Name="EmailEntry" Placeholder="Email ili Korisničko Ime" PlaceholderColor="Gray" />
                    <Entry x:Name="PasswordEntry" Placeholder="Lozinka" IsPassword="True" PlaceholderColor="Gray" />
                </VerticalStackLayout>
            </Frame>
            <Label x:Name="ErrorLabel" TextColor="Red" FontSize="14" />
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="2" Spacing="10">
            <Button Text="Prijavi se" Clicked="OnLoginClicked" BackgroundColor="{StaticResource PrimaryColor}" TextColor="White" CornerRadius="10" />
            <Button Text="Registracija" Clicked="OnSignupClicked" BackgroundColor="{StaticResource SecondaryColor}" TextColor="White" CornerRadius="10" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>