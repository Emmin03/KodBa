<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobsNestApp.Pages.SearchPage"
             BackgroundColor="{StaticResource BackgroundColor}">
    <Grid RowDefinitions="Auto, *, Auto" Padding="20">
        <Label Grid.Row="0" Text="Pretraga Poslova" FontSize="30" HorizontalOptions="Center" TextColor="{StaticResource PrimaryColor}" Margin="0,20,0,0" />
        <VerticalStackLayout Grid.Row="1" Spacing="15" VerticalOptions="Center">
            <Frame CornerRadius="10" Padding="10" BackgroundColor="White" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Entry x:Name="QueryEntry" Placeholder="Ključna riječ" PlaceholderColor="Gray" />
                    <Entry x:Name="LocationEntry" Placeholder="Lokacija" PlaceholderColor="Gray" />
                </VerticalStackLayout>
            </Frame>
            <Button Text="Pretraži" Clicked="OnSearchClicked" BackgroundColor="{StaticResource PrimaryColor}" TextColor="White" CornerRadius="10" />
            <Label x:Name="ResultsLabel" TextColor="{StaticResource TextColor}" FontSize="16" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>